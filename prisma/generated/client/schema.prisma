datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}


model Cv {
  id         String  @id
  name       String
  age        Int
  job        String
  user       User    @relation(fields: [userId], references: [id])
  userId     String
  skills     Skill[] @relation("SkillToCV")
}

model Skill {
  id           String  @id
  designation  String
  cvs          Cv[]    @relation("SkillToCV")
}

model User {
  id    String  @id
  name  String
  email String
  role  Role
  cvs   Cv[]
}

enum Role {
  USER
  ADMIN
}

